<UserControl x:Class="MachineTagEditor.Modules.TagManager.Views.DataType"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MachineTagEditor.Modules.TagManager.Views"
             xmlns:ex="clr-namespace:MachineTagEditor.Infrastructure.Extensions.Visual;assembly=MachineTagEditor.Infrastructure"
             xmlns:b="clr-namespace:MachineTagEditor.Infrastructure.Behaviors;assembly=MachineTagEditor.Infrastructure"
                          xmlns:ia="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" 
             DataContext="{Binding}"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Copy" Command="{Binding CopyCommand}"/>
            <Line Width="2"/>
            <MenuItem Header="Paste Before" Command="{Binding PasteCommand}" CommandParameter="Before"/>
            <MenuItem Header="Paste After" Command="{Binding PasteCommand}" CommandParameter="After"/>
            <MenuItem Header="Delete" Command="{Binding DeleteCommand}" CommandParameter="After"/>
        </ContextMenu>
    </UserControl.ContextMenu>
    <ia:Interaction.Behaviors>
        <b:FrameworkElementDragBehavior/>
        <b:FrameworkElementDropBehavior/>
    </ia:Interaction.Behaviors>
    <Border Style="{ex:MultiStyle RoundedEdges}" 
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                BorderThickness="5" 
                BorderBrush="{StaticResource dPyramidSkyBlue}"
                Background="{StaticResource dPyramidSkylineBlue}" Opacity="0.9">



        <StackPanel>
            <TextBlock Style="{StaticResource ResourceKey=HeaderName}" Margin="5,0,0,0" Text="Data Type" Foreground="Black"/>
            <ListView  ItemsSource="{Binding Attributes}"
                           ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid IsSharedSizeScope="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                           Text="{Binding Path=Name}"/>

                            <TextBlock Grid.Column="1" Margin="5,0,0,0" Text="{Binding Path=Value}" 
                                 HorizontalAlignment="Stretch"  VerticalAlignment="Center" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Border>
</UserControl>
