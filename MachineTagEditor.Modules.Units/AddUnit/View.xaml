                -->
                </Grid>

            <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                    Content="Add"
                    Margin="15,0,15,30"
                    Command="{Binding AddUnit}"
                    />
        </Grid>
    </Grid>
</UserControl>
